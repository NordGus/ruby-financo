<%# locals: (form:, account:, delete_transition: "duration-200") %>

<%= render "components/forms/inputs/check_box", form:, attr: :archived %>
<div class="relative text-lg">
  <div
    class="h-32 flex flex-col items-stretch overflow-clip divide-y border-y [&[data-hidden]]:border-y-0 [&[data-hidden]]:h-0 absolute bottom-16 left-0 right-0 <%= delete_transition %>"
    data-hidden
    data-deletable-target="confirmation"
  >
    <p class="flex items-center flex-grow px-4 text-red-500 bg-red-100">
      <%= t("accounts_and_goals.ui.accounts.deletion_message") %>
    </p>
    <%=
      link_to t("ui.buttons.confirm"),
              accounts_and_goals_account_path(account),
              data: { turbo_method: :delete },
              class: "px-4 flex-grow cursor-pointer text-neutral-50 bg-red-500 hover:bg-red-600 flex justify-center items-center #{delete_transition}"
    %>
  </div>
  <div class="flex flex-col justify-between">
    <span
      class="flex-grow h-16 [&[data-hidden]]:h-0 overflow-y-clip bg-neutral-50 hover:bg-neutral-200 flex justify-center items-center cursor-pointer <%= delete_transition %>"
      data-hidden
      data-deletable-target="cancel"
      data-action="click->deletable#cancel"
    >
      <%= t("ui.buttons.cancel") %>
    </span>
    <span
      class="flex-grow h-16 [&[data-hidden]]:h-0 overflow-y-clip text-neutral-50 bg-red-500 hover:bg-red-600 flex justify-center items-center cursor-pointer <%= delete_transition %>"
      data-deletable-target="trigger"
      data-action="click->deletable#confirm"
    >
    <%= t("ui.buttons.delete") %>
  </span>
  </div>
</div>
