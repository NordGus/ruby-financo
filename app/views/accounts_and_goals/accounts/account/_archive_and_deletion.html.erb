<%# locals: (form:, account:, delete_transition: "duration-200") %>

<%= render "components/forms/inputs/check_box", form:, attr: :archived %>
<div class="flex flex-col justify-between">
  <div
    class="flex flex-col items-stretch overflow-clip h-32 [&[data-hidden]]:h-0 divide-y <%= delete_transition %>"
    data-hidden
    data-deletable-target="confirmation"
  >
    <p class="flex items-center flex-grow px-4 text-red-500 bg-red-100">
      <%= t("accounts_and_goals.ui.accounts.deletion_message") %>
    </p>
    <div class="flex items-stretch flex-grow divide-x">
      <%=
        link_to t("ui.buttons.confirm"),
                accounts_and_goals_account_path(account),
                data: { turbo_method: :delete },
                class: "px-4 flex-grow cursor-pointer text-neutral-50 bg-red-500 hover:bg-red-600 flex justify-center items-center"
      %>
      <span
        class="px-4 flex-grow cursor-pointer hover:bg-neutral-100 flex justify-center items-center"
        data-action="click->deletable#cancel"
      >
      <%= t("ui.buttons.cancel") %>
    </span>
    </div>
  </div>
  <span
    class="text-lg flex-grow h-16 [&[data-hidden]]:h-0 overflow-y-clip text-neutral-50 bg-red-500 hover:bg-red-600 flex justify-center items-center cursor-pointer <%= delete_transition %>"
    data-deletable-target="trigger"
    data-action="click->deletable#confirm"
  >
    <%= t("ui.buttons.delete") %>
  </span>
</div>
